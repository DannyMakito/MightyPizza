<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CreatePizzaServlet</servlet-name>
        <servlet-class>com.makito.web.CreatePizzaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartSession</servlet-name>
        <servlet-class>com.makito.web.StartSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMenuServlet</servlet-name>
        <servlet-class>com.makito.web.GetMenuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PizzaOrderServlet</servlet-name>
        <servlet-class>com.makito.web.PizzaOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateOrderServlet</servlet-name>
        <servlet-class>com.makito.web.CreateOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewALLPizzaServlet</servlet-name>
        <servlet-class>com.makito.web.ViewALLPizzaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllOrdersServlet</servlet-name>
        <servlet-class>com.makito.web.ViewAllOrdersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>End</servlet-name>
        <servlet-class>com.makito.web.End</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreatePizzaServlet</servlet-name>
        <url-pattern>/CreatePizzaServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartSession</servlet-name>
        <url-pattern>/StartSession.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMenuServlet</servlet-name>
        <url-pattern>/GetMenuServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PizzaOrderServlet</servlet-name>
        <url-pattern>/PizzaOrderServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateOrderServlet</servlet-name>
        <url-pattern>/CreateOrderServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewALLPizzaServlet</servlet-name>
        <url-pattern>/ViewALLPizzaServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllOrdersServlet</servlet-name>
        <url-pattern>/ViewAllOrdersServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>End</servlet-name>
        <url-pattern>/End.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <error-page>
        <exception-type>com.makito.bl.UserNotFoundException</exception-type>
        <location>/error.jsp</location>
    </error-page>
</web-app>
